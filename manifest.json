{
    "name": "WaniKani Kanji Highlighter",
    "description": "Unofficial kanji highlighter, matching kanji learned with WaniKani.",
    "version": "0.5.2",
    "manifest_version": 2,
    "icons": {
        "16":  "logo/logo_bb_16x16.png",
        "32":  "logo/logo_bb_32x32.png",
        "48":  "logo/logo_bb_48x48.png",
        "128": "logo/logo_bb.png"
    },
    "background": {
        "scripts": ["scripts/background.js", "scripts/functions.js", "scripts/static.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["scripts/essentials.js", "scripts/functions.js", "scripts/static.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "notifications"
    ]
}